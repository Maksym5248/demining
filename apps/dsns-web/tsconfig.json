{
    "extends": "@/shared/config/tsconfig-base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "noEmit": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "composite": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "references": [
        {
            "path": "../../packages/shared"
        },
        {
            "path": "../../packages/shared-client"
        }
    ],
    "include": ["**/*.ts", "**/*.tsx", "*.ts", "*.tsx", "*.js"],
    "exclude": ["node_modules"]
}
