{
    "extends": "../tsconfig.packages.json",
    "compilerOptions": {
        "lib": ["esnext"],
        "type": "module",
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
          "~/*": ["./src/*"]
        },
    },
    "references": [
        {
          "path": "../shared"
        }
    ],
    "include": ["**/*.ts", "**/*.tsx", "*.ts", "*.tsx", "*.js"],
    "exclude": ["node_modules", "dist"]
}
