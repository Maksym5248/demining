        "sourceMap": true,
        "lib": ["esnext"],
        "outDir": "./dist",
        "composite": true,
        "paths": {
          "~/*": ["./src/*"]
        },
    },
    "references": [
        {
          "path": "../shared"
        }
    ],
    "include": ["**/*.ts", "*.ts", "*.js"],
    "exclude": ["node_modules", "dist"]
}
