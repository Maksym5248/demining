{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "declaration": true,
        "composite": true,
        "paths": {
            "~/*": ["./*"]
        },

        "moduleResolution": "node",
        "declarationMap": true,
        "importHelpers": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"]
}
