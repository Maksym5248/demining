{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Jest Tests",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
			"args": ["--runInBand", "--watchAll=false"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"NODE_ENV": "test"
			}
		}
	]
}
