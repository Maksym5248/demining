{
    "extends": "@/shared/config/tsconfig-base.json",
    "compilerOptions": {
        "declarationMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "jsx": "react-jsx",
        "composite": true,
        "paths": {
            "~/*": ["./*"]
        }
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "include": ["**/*.ts", "**/*.tsx", "*.ts", "*.tsx"],
    "exclude": ["node_modules", "dist"]
}